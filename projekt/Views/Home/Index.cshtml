@model List<projekt.Models.Car>
@using projekt.Models

@{
    ViewData["Title"] = "ToFastToRent";
}

<style>
    body {
        margin: 0;
        padding: 0;
        background: radial-gradient(#0a0a0a, #000000);
        color: #fff;
        font-family: 'Arial', sans-serif;
        overflow-x: hidden;
    }

    .top-bar {
        display: flex;
        justify-content: center;
        padding: 20px;
        background: transparent;
    }

    .nav-links {
        display: flex;
        gap: 20px;
    }

        .nav-links a {
            padding: 10px 20px;
            color: #f44336;
            text-decoration: none;
            border: 2px solid #f44336;
            border-radius: 8px;
            font-weight: bold;
            text-shadow: 0 0 5px #f44336;
            transition: all 0.3s ease;
            background-color: black;
        }

            .nav-links a:hover {
                background-color: #f44336;
                color: black;
            }

    h1 {
        text-align: center;
        font-size: 2.5rem;
        margin-top: 30px;
        color: #f44336;
        text-shadow: 0 0 10px #f44336;
    }

    .slider-container {
        max-width: 100%;
        overflow: hidden;
        margin: 40px auto;
        position: relative;
    }

    .car-slider {
        display: flex;
        transition: transform 0.5s ease-in-out;
        gap: 20px;
        padding: 0 20px;
    }

    .car-card {
        flex: 0 0 300px;
        background-color: #1a1a1a;
        border: 2px solid #f44336;
        border-radius: 10px;
        padding: 10px;
        box-shadow: 0 0 10px #f44336aa;
        position: relative;
        transition: transform 0.5s ease;
    }

    .car-image img {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-radius: 8px;
    }

    .car-name {
        font-size: 1.2rem;
        text-align: center;
        color: #f44336;
        margin-top: 10px;
    }

    .car-info, .car-extra-info {
        text-align: center;
        font-size: 0.9rem;
    }

    .car-actions a {
        display: block;
        text-align: center;
        margin-top: 10px;
        padding: 8px;
        border: 2px solid #f44336;
        border-radius: 8px;
        color: #f44336;
        text-decoration: none;
        transition: 0.3s ease;
    }

        .car-actions a:hover {
            background-color: #f44336;
            color: black;
        }

    /* Neonowy napis dla statusu */
    .status-label {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 5px 12px;
        font-weight: bold;
        font-size: 1rem;
        border-radius: 8px;
        text-transform: uppercase;
        text-align: center;
        color: #f44336;
        text-shadow: 0 0 5px #f44336, 0 0 10px #f44336, 0 0 20px #f44336, 0 0 40px #f44336;
        background-color: rgba(0, 0, 0, 0.6);
    }

    .status-wypozyczony {
        color: #00ffff;
        text-shadow: 0 0 5px #00ffff, 0 0 10px #00ffff, 0 0 20px #00ffff, 0 0 40px #00ffff;
    }

    .status-serwis {
        color: #ff00ff;
        text-shadow: 0 0 5px #ff00ff, 0 0 10px #ff00ff, 0 0 20px #ff00ff, 0 0 40px #ff00ff;
    }

    .slider-buttons {
        text-align: center;
        margin-top: 10px;
    }

        .slider-buttons button {
            padding: 8px 20px;
            margin: 10px;
            border: none;
            background-color: #f44336;
            color: white;
            font-weight: bold;
            border-radius: 5px;
            cursor: pointer;
        }

    .opinie {
        margin-top: 50px;
        text-align: center;
    }

        .opinie h2 {
            color: #f44336;
            margin-bottom: 20px;
            text-shadow: 0 0 5px #f44336;
        }

    .opinie-container {
        display: flex;
        overflow-x: auto;
        gap: 20px;
        padding: 0 20px;
        scroll-behavior: smooth;
    }

    .opinia {
        min-width: 250px;
        background-color: #111;
        border: 1px solid #f44336;
        padding: 15px;
        border-radius: 10px;
        color: #eee;
        box-shadow: 0 0 8px #f44336;
        flex-shrink: 0;
    }

    .kontakt, .mapa {
        text-align: center;
        margin-top: 40px;
        padding: 0 20px;
    }

        .kontakt h3, .mapa h3 {
            color: #f44336;
            margin-bottom: 10px;
            text-shadow: 0 0 5px #f44336;
        }

        .mapa iframe {
            border: none;
            width: 80%;
            height: 300px;
            border-radius: 10px;
            box-shadow: 0 0 10px #f44336;
        }
</style>

<div class="top-bar">
    <div class="nav-links">
        <a href="/">Strona główna</a>
        <a href="#samochody">Samochody</a>
        <a href="#opinie">Opinie</a>
        <a href="#kontakt">Kontakt</a>
        <a href="/Admin/Admin/Index">Panel Admina</a>
    </div>
</div>

<h1>ToFastToRent</h1>

<div id="samochody" class="slider-container">
    <div id="carSlider" class="car-slider">
        @foreach (var car in Model.Take(9))
        {
            <div class="car-card">
                <div class="car-image">
                    <img src="~/zdjecia/@car.Zdjecie" alt="@car.Marka @car.Model" />
                </div>
                <div class="car-name">@car.Marka @car.Model</div>
                <div class="car-info">
                    <p><strong>Cena:</strong> @car.CenaZaDzien zł</p>
                    <p><strong>Silnik:</strong> @car.Silnik</p>
                    <p><strong>Moc:</strong> @car.MocKM KM</p>
                </div>

                @if (car.Status == StatusSamochodu.Dostepny)
                {
                    <div class="car-actions">
                        <a href="/Home/Szczegoly/@car.Id">Wypożycz</a>
                    </div>
                }
                else
                {
                    var statusText = car.Status == StatusSamochodu.Wypozyczony ? "Wypożyczony" : "Serwis";
                    var statusClass = car.Status == StatusSamochodu.Wypozyczony ? "status-wypozyczony" : "status-serwis";

                    <div class="status-label @statusClass">@statusText</div>
                    <div class="car-actions">
                        <a style="opacity: 0.5; pointer-events: none;">Niedostępny</a>
                    </div>
                }
            </div>
        }
    </div>
    <div class="slider-buttons">
        <button onclick="prevCar()">←</button>
        <button onclick="nextCar()">→</button>
    </div>
</div>

<div id="opinie" class="opinie">
    <h2>Opinie naszych klientów</h2>
    <div class="opinie-container" id="opinieSlider">
        <div class="opinia">"Świetna obsługa, auto jak z marzeń!" – Krzysiek</div>
        <div class="opinia">"Polecam każdemu, szybki wynajem i super cena!" – Marta</div>
        <div class="opinia">"Ferrari idealne na weekend w górach." – Bartek</div>
        <div class="opinia">"Szybko, sprawnie i z klasą!" – Dominika</div>
        <div class="opinia">"Mega klimat, na pewno wrócę!" – Michał</div>
    </div>
</div>

<div id="kontakt" class="kontakt">
    <h3>Kontakt</h3>
    <p>Email: kontakt@tofasttorent.pl</p>
    <p>Telefon: +48 123 456 789</p>
    <p>Adres: ul. Neonowa 7, 00-123 Warszawa</p>
</div>

<div class="mapa">
    <h3>Lokalizacje naszych samochodów</h3>
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2443.0603212109864!2d21.012228!3d52.229675!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNTLCsDEzJzQ2LjgiTiAyMcKwMDAnNDQuMCJF!5e0!3m2!1spl!2spl!4v1611111111111" allowfullscreen="" loading="lazy"></iframe>
</div>

<script>
    let carIndex = 0;
    const slider = document.getElementById('carSlider');
    const cardWidth = 320; // width + gap

    function nextCar() {
        if (carIndex < slider.children.length - 3) {
            carIndex++;
            slider.style.transform = `translateX(-${carIndex * cardWidth}px)`;
        }
    }

    function prevCar() {
        if (carIndex > 0) {
            carIndex--;
            slider.style.transform = `translateX(-${carIndex * cardWidth}px)`;
        }
    }
</script>
