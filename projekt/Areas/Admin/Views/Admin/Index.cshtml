@model List<projekt.Models.Car>

@{
    ViewData["Title"] = "Panel Admina - Lista samochodów";
}

<h2>Lista samochodów</h2>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Marka</th>
            <th>Model</th>
            <th>Cena za dzień</th>
            <th>Status</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Marka</td>
                <td>@car.Model</td>
                <td>@car.CenaZaDzien zł</td>
                <td>@(car.Dostepny ? "Dostępny" : "Wypożyczony")</td>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@car.Id" onsubmit="return confirm('Na pewno chcesz usunąć ten samochód?');">
                        <button type="submit" class="btn btn-danger btn-sm">Usuń</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
